@model IsThereAnyNews.ViewModels.AllUsersPublicProfilesViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    @foreach (var profile in Model.Profiles)
    {
        <a href="@Url.Action("Profile",new {id=profile.Id})" class="col-sm-2 btn btn-default btn-xs border-less" role="button">
            <span>@profile.DisplayName</span>
            <span><i class="fa fa-rss">@profile.ChannelsCount</i></span>
        </a>
    }
</div>