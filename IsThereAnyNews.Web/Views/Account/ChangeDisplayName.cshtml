@model IsThereAnyNews.ViewModels.AccountDetailsViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="col-sm-4 col-sm-offset-4">
        <div class="row">
            @using (Html.BeginForm())
            {
                <div class="form-group">
                    <label>Display name</label><br/>
                    <input placeholder="@Model.DisplayName" name="Displayname" id="Displayname" type="text" class="form-control">
                </div>
                <div class="pull-right">
                    @Html.ActionLink("back", MVC.Account.Index())
                    <input type="submit" class="btn btn-primary" value="change"/>
                </div>
            }
        </div>
    </div>
</div>