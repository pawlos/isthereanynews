@model IsThereAnyNews.Dtos.AddChannelDto

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    @using (Html.BeginForm(MVC.Home.AddChannel(), FormMethod.Post))
    {
        @Html.ValidationSummary()
        <div class="row">
            <div class="col-sm-12">
                <div class="form-group">
                    <label>Rss channel link</label>
                    @Html.TextBoxFor(m => m.RssChannelLink, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Rss channel name</label>
                    @Html.TextBoxFor(m => m.RssChannelName, new { @class = "form-control" })
                </div>
                <button type="submit"
                        class="btn btn-primary pull-right">
                    Add channel
                </button>
                @Html.ActionLink("back to subscriptions", MVC.Home.My())
            </div>
        </div>
    }
</div>