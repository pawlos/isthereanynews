@using Microsoft.Owin.Security
@model IsThereAnyNews.ViewModels.Login.AuthorizationIndexViewModel
<div class="container">
    <div class="row">
        <div class="row text-center">
            <h1>If you dont have an account new one will be created for you</h1>
            <h3>Current registration status is @Model.CurrentRegistrationStatus</h3>
        </div>
        <div class="col-md-4 col-md-offset-4 text-center" >
            <section id="socialLoginForm">
                @{
                    using (Html.BeginForm(MVC.Home.ExternalLogin()))
                    {
                        @Html.AntiForgeryToken()
                        <div id="socialLoginList">
                            <p>
                                @foreach (AuthenticationDescription p in Model.Providers)
                                {
                                    <button type="submit"
                                            class="btn btn-default btn-lg"
                                            id="@p.AuthenticationType"
                                            name="provider"
                                            value="@p.AuthenticationType"
                                            title="Log in using your @p.Caption account">
                                        @p.AuthenticationType
                                    </button>
                                }
                            </p>
                        </div>
                    }
                }
            </section>
        </div>
    </div>
</div>
